{% extends "structure/table.twig" %}

{% block button %}
	<a ui-sref="pembiayaan_lainnya_form({dataId: null})" class="btn btn-success btn-sm">
		<i class="fa fa-plus"></i> Tambah
	</a>
{% endblock %}

{% block search %}

	{% include 'components/search.twig' %}

{% endblock %}

{% block table %}
	{% verbatim %}

		<thead>
			<tr>
				<th>Nama</th>
				<th>Biaya Lunas</th>
				<th>Total Biaya</th>
			</tr>
		</thead>

		<tbody>
			<tr ng-if="!vm.data || vm.data.length == 0">
	          <td colspan="5" class="text-center">Tidak ada data yang tersedia</td>
	        </tr>
	        <tr ng-repeat="data in vm.data" class="clickable" ng-attr-tr_id="{{data.id}}" state_name="pembiayaan_lainnya_detail" widget-tr="">
	          <td ng-bind="data.nama || '-'"></td>
	          <td>
	          	<div widget-number="{{ data.biaya_lunas || 0 }}"></div>
	          </td>
	          <td>
	          	<div widget-number="{{ data.total_biaya || 0 }}"></div>
	          </td>
	        </tr>
		</tbody>

	{% endverbatim %}
{% endblock %}