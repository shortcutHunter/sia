<div ng-controller="ShellController as vm">

  <div id="sidebar" class="active">
    <div class="sidebar-wrapper active">
      <div class="sidebar-header">
        <div class="d-flex justify-content-between">
          <div class="logo">
            <a href="index.html"><img src="/public/template/images/logo/logo.png" alt="Logo" srcset=""></a>
          </div>
          <div class="toggler">
            <a href="#" class="sidebar-hide d-xl-none d-block"><i class="bi bi-x bi-middle"></i></a>
          </div>
        </div>
      </div>
      
      <div ng-include="'/template/layout/sidebar'"></div>

      <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
    </div>
  </div>

  <div id="main">
    <header class="mb-3">
      <a href="#" class="burger-btn d-block d-xl-none">
          <i class="bi bi-justify fs-3"></i>
      </a>
    </header>

    <div class="page-content">
        <div class="row">
            <div class="col-12 col-xxl-8">
                <div ui-view class="shuffle-animation"></div>
            </div>
        </div>
    </div>
  </div>

  <div ngplus-overlay ngplus-overlay-delay-in="50" ngplus-overlay-delay-out="700" ngplus-overlay-animation="dissolve-animation">
      <img src="/assets/images/busy.gif" />

      <div class="page-spinner-message overlay-message">{{vm.busyMessage}}</div>
    </div>

</div>