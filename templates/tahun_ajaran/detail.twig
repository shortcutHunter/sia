{% extends "structure/detail.twig" %}

{% block button %}

  <a class="btn btn-sm btn-success" ui-sref="tahun_ajaran_form({dataId: vm.data.id})"><i class="fa fa-edit"></i> Edit</a>
  <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Delete</button>

{% endblock %}

{% block content %}

	<table class="custom-table">
		{% include 'components/preview-text.twig' with {'name': 'nama', 'label': 'Nama'} %}
		{% include 'components/preview-text.twig' with {'name': 'tahun', 'label': 'Tahun'} %}
		{% include 'components/preview-text.twig' with {'name': 'paket.nama', 'label': 'Paket'} %}
		{% include 'components/preview-text.twig' with {'name': 'nomor', 'label': 'Nomor'} %}
	</table>

	<ul class="nav nav-tabs mt-5">
		<li class="nav-item">
        	<a class="nav-link active" data-bs-toggle="list" href="#pembiayaan">Pembiayaan</a>
        </li>
    </ul>

    <div class="tab-content text-justify">
    	<div class="tab-pane fade show active" id="pembiayaan">

    		<div class="row mt-3">
    			<div class="col-md-12">

        			<table class="table">

						<thead>
							<th>Kode</th>
							<th>Nama</th>
							<th>Nominal</th>
							<th></th>
						</thead>

						<tbody>
							<tr ng-repeat="col in vm.data.paket.item track by $index" ng-if="vm.data.paket.item && vm.data.paket.item.length != 0">
								<td ng-bind="col.kode || '-'"></td>
								<td ng-bind="col.nama || '-'"></td>
								<td ng-bind="col.nominal || '-'"></td>
							</tr>
							<tr ng-if="!vm.data.paket.item || vm.data.paket.item.length == 0">
								<td  class="text-center" colspan="5">Belum ada data</td>
							</tr>
						</tbody>

					</table>
        		
        		</div>
    		</div>
    	</div>
    </div>

{% endblock %}
