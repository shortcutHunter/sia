{% extends 'structure/form.twig' %}


{% block content %}
		
	<div class="row">
		<div class="col-md-6">
			<table class="custom-table">
          		{% include 'components/date-picker.twig' with {'name': 'tanggal', 'label': 'Tanggal'} %}
				{% include 'components/input.twig' with {'name': 'kode', 'label': 'Kode'} %}
				{% include 'components/autocomplete.twig' with {'name': 'orang_id', 'label': 'Nama Mahasiswa', 'table': 'orang', 'normal_search': true} %}
				{% include 'components/preview-text.twig' with {'name': 'nominal', 'label': 'Nominal'} %}
			</table>
		</div>
	</div>

	<ul class="nav nav-tabs mt-5">
		<li class="nav-item">
        	<a class="nav-link active" data-bs-toggle="list" href="#pembiayaan">Pembiayaan</a>
        </li>
    </ul>

    <div class="tab-content text-justify">
    	<div class="tab-pane fade show active" id="pembiayaan">

    		<div class="row mt-3">
    			<div class="col-12">
    				<button class="btn btn-primary" ng-click="vm.tambahPembiayaan()">Tambah Pembiayaan</button>
    			</div>
    		</div>

    		<div class="row mt-3">
    			<div class="col-md-12">

        			<table class="table">

						<thead>
							<th>Kode</th>
							<th>Nama</th>
							<th>Nominal</th>
							<th></th>
						</thead>

						<tbody>
							<tr ng-repeat="col in vm.data.tagihan_item track by $index" ng-if="vm.data.tagihan_item && vm.data.tagihan_item.length != 0">
								<td ng-bind="col.kode || '-'"></td>
								<td ng-bind="col.nama || '-'"></td>
								<td ng-bind="col.nominal || '-'"></td>
							</tr>
							<tr ng-if="!vm.data.tagihan_item || vm.data.tagihan_item.length == 0">
								<td  class="text-center" colspan="5">Belum ada data</td>
							</tr>
						</tbody>

					</table>
        		
        		</div>
    		</div>
    	</div>
    </div>

{% endblock %}