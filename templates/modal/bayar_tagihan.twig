{% extends 'modal/template.twig' %}

{% block title %}
	<h5 class="modal-title">Atur Paket</h5>
{% endblock %}


{% block content %}

	<div class="row">
		<div class="col-md-6">
			<table class="custom-table">
				{% include 'components/preview-text.twig' with {'name': 'tanggal', 'label': 'Tanggal', 'prefix': 'data'} %}
				{% include 'components/preview-text.twig' with {'name': 'nominal', 'label': 'Nominal', 'prefix': 'data'} %}
			</table>
		</div>
	</div>

	<hr>

	<div class="row">
		<div class="col-md-12">
			<table class="custom-table">
              {% include 'components/input-file.twig' with {'name': 'file', 'label': 'Upload Bukti Pembayaran'} %}
			</table>
		</div>
	</div>

	<ul class="nav nav-tabs mt-5">
		<li class="nav-item">
        	<a class="nav-link active" data-bs-toggle="list" href="#bukti">Bukti Pembayaran</a>
        </li>
		<li class="nav-item">
        	<a class="nav-link" data-bs-toggle="list" href="#detail">Detail Tagihan</a>
        </li>
    </ul>

    <div class="tab-content text-justify">
    	<div class="tab-pane fade show active" id="bukti">

    		<div class="row mt-3">
    			<div class="col-md-12">
        			<table class="table">
						<thead>
							<th>Nama File</th>
						</thead>

						<tbody>
							<tr ng-repeat="col in data.tagihan_bukti_bayar track by $index" ng-if="data.tagihan_bukti_bayar && data.tagihan_bukti_bayar.length != 0">
								<td>
									<a href="javascript:void(0)" widget-preview="col.file" ng-bind="col.file.filename || '-'"></a>
								</td>
							</tr>
							<tr ng-if="!data.tagihan_bukti_bayar || data.tagihan_bukti_bayar.length == 0">
								<td  class="text-center" colspan="1">Belum ada data</td>
							</tr>
						</tbody>
					</table>
        		</div>
    		</div>
    	</div>

    	<div class="tab-pane fade" id="detail">

    		<div class="row mt-3">
    			<div class="col-md-12">
        			<table class="table">
						<thead>
							<th>Kode</th>
							<th>Nama</th>
							<th>Nominal</th>
						</thead>
						<tbody>
							<tr ng-repeat="col in data.tagihan_item track by $index" ng-if="data.tagihan_item && data.tagihan_item.length != 0">
								<td ng-bind="col.kode || '-'"></td>
								<td ng-bind="col.nama || '-'"></td>
								<td ng-bind="col.nominal || '-'"></td>
							</tr>
							<tr ng-if="!data.tagihan_item || data.tagihan_item.length == 0">
								<td  class="text-center" colspan="3">Belum ada data</td>
							</tr>
						</tbody>
					</table>
        		</div>
    		</div>
    	</div>
    </div>

{% endblock %}

{% block footer %}
	{% verbatim %}
		<button class="btn" data-bs-dismiss="modal">Close</button>
		<button class="btn btn-primary" ng-click="upload()">Upload</button>
	{% endverbatim %}
{% endblock %}