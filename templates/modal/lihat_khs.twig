{% extends 'modal/template.twig' %}

{% block title %}
	<h5 class="modal-title">
		KHS Mahasiswa
	</h5>
{% endblock %}


{% block content %}

	<div class="modal-body ui-front">
		<div class="row">
			<div class="col-md-6">
				<table class="custom-table">
					{% include 'components/preview-text.twig' with {'name': 'nim', 'label': 'NIM', 'prefix': 'data.mahasiswa'} %}
					{% include 'components/preview-text.twig' with {'name': 'orang.nama', 'label': 'Nama', 'prefix': 'data.mahasiswa'} %}
				</table>
			</div>

			<div class="col-md-6">
				<table class="custom-table">
					{% include 'components/preview-text.twig' with {'name': 'tahun_ajaran.nama', 'label': 'Tahun Ajaran', 'prefix': 'data.mahasiswa'} %}
					{% include 'components/preview-text.twig' with {'name': 'semester.nama', 'label': 'Semester', 'prefix': 'data.mahasiswa'} %}
				</table>
			</div>
		</div>

		<hr>

		{% verbatim %}
		
		<div class="mt-3">
			<table class="table table-bordered">
                <thead>
                	<tr>
	                    <th>SEMESTER</th>
	                    <th>TOTAL SKS</th>
	                    <th>IPS</th>
	                    <th></th>
	                </tr>
                </thead>

		        <tbody>
			        <tr ng-if="!vm.data.mahasiswa.khs || vm.data.mahasiswa.khs.length == 0">
			          <td colspan="4" class="text-center">Tidak ada data yang tersedia</td>
			        </tr>
		        	<tr ng-repeat="khs in data.mahasiswa.khs">
	                    <td ng-bind="khs.semester.nama"></td>
	                    <td ng-bind="khs.total_sks"></td>
	                    <td ng-bind="khs.ips"></td>
	                    <td>
							<button class="btn btn-primary" ng-click="detailKhs(khs)">Detail</button>
	                    </td>
	                </tr>
		        </tbody>

            </table>
		</div>

		{% endverbatim %}
	</div>

{% endblock %}

{% block footer %}
		<button class="btn" data-bs-dismiss="modal">Close</button>
{% endblock %}