{% extends 'modal/template.twig' %}

{% block title %}
	<h5 class="modal-title">Ganti Password</h5>
{% endblock %}


{% block content %}

	<div class="modal-body ui-front">
		<div class="mt-3">
			<div class="row">
				<div class="col-md-6">
					<table class="custom-table">
						{% include 'components/input-password.twig' with {'name': 'password', 'label': 'Password'} %}
					</table>
				</div>	
			</div>
		</div>
	</div>

{% endblock %}

{% block footer %}
	<button class="btn" data-bs-dismiss="modal">Close</button>
	<button class="btn btn-primary" ng-click="gantiPassword()" ng-disabled="data_mahasiswa.length == 0">Ganti</button>
{% endblock %}