{% extends 'modal/template.twig' %}

{% block title %}
	<h5 class="modal-title">Tambah Pembiayaan</h5>
{% endblock %}


{% block content %}

	<div class="modal-body ui-front">
		<div class="row">
			<div class="col-md-6">
				<table class="custom-table">
					{% include 'components/input.twig' with {'name': 'kode', 'label': 'Kode'} %}
					{% include 'components/input.twig' with {'name': 'nama', 'label': 'Nama'} %}
					{% include 'components/input.twig' with {'name': 'nominal', 'label': 'Nominal'} %}
				</table>
			</div>	
		</div>
	</div>

{% endblock %}

{% block footer %}
	{% verbatim %}
		<button class="btn" data-bs-dismiss="modal">Close</button>
		<button class="btn btn-primary" ng-click="addPembiayaan()">Submit</button>
	{% endverbatim %}
{% endblock %}