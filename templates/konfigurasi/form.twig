<section id="form-view" class="mainbar">

  <div class="col-12">
    <div class="col-12 mb-3">
      <button class="btn btn-sm" widget-back="">
        <i class="fa fa-arrow-left"></i>
      </button>
    </div>

    <div class="card">
      <div class="card-header">
        <h3 ng-bind-html="vm.title">Form</h3>
      </div>

      <div class="card-content px-3">
        <div class="row">
    			<div class="col-md-6">
    				<table class="custom-table">
    				  {% include 'components/input.twig' with {'name': 'kode_perusahaan', 'label': 'Kode Perusahaan'} %}
              {% include 'components/input.twig' with {'name': 'base_url', 'label': 'Base URL'} %}
    				</table>
    			</div>
    		</div>

        <hr>

        <div class="row">
          <div class="col-md-6">
            <h5>Akademik</h5>
            <table class="custom-table">
              {% include 'components/checkbox.twig' with {'name': 'registrasi', 'label': 'Buka Pendaftaran'} %}
              {% include 'components/select.twig' with {'name': 'semester_id', 'label': 'Semester Awal', 'option': 'selection.semester', 'label_selection': 'nama'} %}
              {# {% include 'components/select.twig' with {'name': 'tahun_ajaran_id', 'label': 'Tahun Ajaran Awal', 'option': 'selection.tahun_ajaran', 'label_selection': 'nama'} %} #}
              {% include 'components/input.twig' with {'name': 'sequance_nim', 'label': 'Sequance NIM'} %}
            </table>
          </div>

          <div class="col-md-6">
            <h5>SMTP Mail</h5>
            <table class="custom-table">
              {% include 'components/checkbox.twig' with {'name': 'status_smtp', 'label': 'Aktif'} %}
              {% include 'components/input.twig' with {'name': 'host', 'label': 'Host'} %}
              {% include 'components/input.twig' with {'name': 'port', 'label': 'Port'} %}
              {% include 'components/input.twig' with {'name': 'username', 'label': 'Username'} %}
              {% include 'components/input.twig' with {'name': 'password', 'label': 'Password'} %}
            </table>
          </div>
        </div>

      </div>

      <div class="card-footer">
        <button class="btn btn-success" ng-click="vm.submitForm()">Simpan</button>
        <button class="btn" widget-back="">Batal</button>
      </div>
    </div>
  </div>

</section>