{% extends 'structure/form.twig' %}


{% block content %}
		
		<div class="row">
			<div class="col-md-6">
				<table class="custom-table">
					{% include 'components/autocomplete.twig' with {'name': 'karyawan_id', 'label': 'Dosen', 'table': 'karyawan', 'data': 'karyawan', 'required': true, 'jenis': 'jenis=dosen'} %}
				</table>
			</div>
			
			<div class="col-md-6">
				<table class="custom-table">
						{% include 'components/select.twig' with {'name': 'tahun_ajaran_id', 'label': 'Tahun Ajaran', 'option': 'selection.tahun_ajaran', 'label_selection': 'nama', 'required': true} %}
						{# {% include 'components/select.twig' with {'name': 'semester_id', 'label': 'Semester', 'option': 'selection.semester', 'label_selection': 'nama', 'required': true} %} #}
				</table>
			</div>

			<div class="col-md-6">
				<table class="custom-table">
					<tr>
						<td>
							<div class="text-muted font-semibold me-3">Semester</div>
						</td>
						<td>
							<div class="form-check">
						        <div class="checkbox" ng-repeat="semester in vm.option.selection.semester track by $index">
						            <label>
						            	{% verbatim %}
						            	<input 
							            	type="checkbox"
							            	ng-model="vm.semester_ids[semester.id]"
							            	class="form-check-input"
							            	ng-true-value="{{semester.id}}"
							            	ng-false-value="false">
							            	    {{ semester.nama }}
						            	{% endverbatim %}
						            </label>
						        </div>
						    </div>
						</td>
					</tr>
				</table>
			</div>
		</div>

{% endblock %}