<section id="form-view" class="mainbar">

  <div class="col-12">
    <div class="col-12 mb-3">
      <button class="btn btn-sm" widget-back="">
        <i class="fa fa-arrow-left"></i>
      </button>
    </div>

    <div class="card">
      <div class="card-header">
        <h3 ng-bind-html="vm.title">Form</h3>
      </div>

      <div class="card-content px-3">
        {% block content %}{% endblock %}
      </div>

      <div class="card-footer">
        <button class="btn btn-success" widget-submit="">Simpan</button>
        <button class="btn" widget-back="">Batal</button>
      </div>
    </div>
  </div>

</section>