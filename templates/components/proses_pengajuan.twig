{% verbatim %}
<div class="modal fade" id="{{vm.uid}}">
{% endverbatim %}

	<div class="modal-dialog modal-dialog-scrollable modal-lg">
		<div class="modal-content">

			<div class="modal-header">
				<h5 class="modal-title">Pengajuan KS</h5>
			</div>

			<div class="modal-body ui-front">
				<div class="row">
					<div class="col-md-6">
						<table class="custom-table">
							{% include 'pages/components/preview-text.twig' with {'name': 'mahasiswa.nim', 'label': 'NIM', 'prefix': 'vm.additionalData'} %}
							{% include 'pages/components/preview-text.twig' with {'name': 'mahasiswa.orang.nama', 'label': 'Nama', 'prefix': 'vm.additionalData'} %}
						</table>
					</div>

					<div class="col-md-6">
						<table class="custom-table">
							{% include 'pages/components/preview-text.twig' with {'name': 'tahun_ajaran.nama', 'label': 'Tahun Ajaran', 'prefix': 'vm.additionalData'} %}
							{% include 'pages/components/preview-text.twig' with {'name': 'semester.nama', 'label': 'Semester', 'prefix': 'vm.additionalData'} %}
						</table>
					</div>
				</div>

				<div class="row mt-3">
	    			<div class="col-md-12">
	    				<table class="table">

							<thead>
								<th>Kode</th>
								<th>Nama</th>
								<th class="text-center">SKS</th>
								<th class="text-center">Semester</th>
							</thead>

							<tbody>
								{% verbatim %}
									<tr ng-repeat="col in vm.data.pengajuan_ks_detail" ng-if="vm.data.pengajuan_ks_detail && vm.data.pengajuan_ks_detail.length != 0">
										<td ng-bind="col.mata_kuliah.kode || '-'"></td>
										<td ng-bind="col.mata_kuliah.nama || '-'"></td>
										<td class="text-center" ng-bind="col.mata_kuliah.sks || '-'"></td>
										<td class="text-center" ng-bind="col.mata_kuliah.semester.nama || '-'"></td>
									</tr>
									<tr ng-if="!vm.data.pengajuan_ks_detail || vm.data.pengajuan_ks_detail.length == 0">
										<td  class="text-center" colspan="4">Belum ada data</td>
									</tr>
								{% endverbatim %}
							</tbody>

						</table>
	        		</div>
	    		</div>

			</div>

			<div class="modal-footer">
				{% verbatim %}
					<button class="btn btn-primary" data-bs-dismiss="modal" btn-update-status="terima" table="pengajuan_ks" target-id="{{vm.data.id}}">Terima</button>
					<button class="btn btn-danger" btn-show-form="alasan_penolakan">Tolak</button>
					<button class="btn" data-bs-dismiss="modal">Close</button>
				{% endverbatim %}				
			</div>

		</div>
	</div>
</div>