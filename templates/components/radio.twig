<tr>
	<td>
		<div class="text-muted font-semibold me-3 {{ required ? 'required' : '' }}">{{ label }}</div>
	</td>
	<td>
		<div class="form-check" ng-repeat="(key, value) in vm.option.{{ option }}">
	        <label class="form-check-label">
	            <input class="form-check-input" type="radio" ng-value="key" name="{{ name }}" ng-model="$parent.vm.data.{{ name }}" {{ required ? 'required' : '' }}>
	            <span ng-bind="value"></span>
	        </label>
	    </div>
	</td>
</tr>
