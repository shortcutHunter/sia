<tr>
	<td>
		<div class="text-muted font-semibold me-3 {{ required ? 'required' : '' }}">{{ label }}</div>
	</td>
	<td>
		<div class="input-group">
            <input class="form-control form-control-sm" type="file" name="{{ name }}" ng-model="vm.data.{{ name }}" base-sixty-four-input="" maxsize="100" do-not-parse-if-oversize="" {{ required ? 'required' : '' }}>
            <button class="btn btn-sm btn-outline-secondary" type="button" widget-preview="vm.data.{{ name }}">
            	<i class="fa fa-eye"></i>
            </button>
        </div>
	</td>
</tr>
