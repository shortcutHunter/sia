{% extends "root/base.twig" %}

{% block title %}Login{% endblock %}


{% block content %}

	<div class="col-12 text-center">
		<form class="form-login" action="/login/submit" method="POST">
			<div class="shadow bg-light">
				<div class="title-login mb-3">Login</div>
				<div class="p-3">
					<div class="form-group text-left">
						<label>Username</label>
						<input type="text" name="username" class="form-control">
					</div>
					<div class="form-group text-left">
						<label>Password</label>
						<input type="password" name="password" class="form-control">
					</div>
					<button class="btn btn-block btn-sm text-white bg-template">Login</button>
				</div>
			</div>
			<div class="lupa-password">
				<a href="/lupa/password">Lupa Password</a>
			</div>
		</form>
	</div>

{% endblock %}