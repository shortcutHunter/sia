{% extends "pages/template/table.twig" %}
{% block table %}

	{% verbatim %}

		<thead>
			<tr>
				<th>NIDN/NIP</th>
				<th>Nama</th>
				<th>Jenis Karyawan</th>
				<th>Status</th>
			</tr>
		</thead>

		<tbody>
			<tr ng-if="!vm.data || vm.data.length == 0">
	          <td colspan="5" class="text-center">Tidak ada data yang tersedia</td>
	        </tr>
	        <tr ng-repeat="data in vm.data" class="clickable" table-row="{{data.id}}" model="{{vm.model}}">
	          <td ng-bind="data.ni || '-'"></td>
	          <td ng-bind="data.orang.nama || '-'"></td>
	          <td ng-bind="data.jenis_karyawan || '-'"></td>
	          <td ng-bind="data.status || '-'"></td>
	        </tr>
		</tbody>

	{% endverbatim %}
{% endblock %}