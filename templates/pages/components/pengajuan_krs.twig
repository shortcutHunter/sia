{% verbatim %}
	
<div class="modal fade" id="{{vm.uid}}">
	<div class="modal-dialog modal-dialog-scrollable modal-lg">
		<div class="modal-content">
{% endverbatim %}
			<div class="modal-header">
				<h5 class="modal-title">Pengajuan KRS</h5>
			</div>

			<div class="modal-body ui-front">
				<div class="row">
					<div class="col-md-6">
						<table class="custom-table">
							{% 
								include 'pages/components/autocomplete.twig' 
								with {
										'name': 'mata_kuliah_id', 
										'label': 'Tambah Mata Kuliah', 
										'remote_url': '/mata_kuliah/get?nama=',
										'additional': '<button class="btn btn-primary btn-add-model" source="vm.data.mata_kuliah_id" type="button" ng-model="vm.data.pengajuan_ks_detail">Tambah</button>'
									} 
							%}
						</table>
					</div>	
				</div>

				<div class="row mt-3">
	    			<div class="col-md-12">
	    				<table class="table">

							<thead>
								<th>Kode</th>
								<th>Nama</th>
								<th class="text-center">SKS</th>
								<th class="text-center">Semester</th>
								<th></th>
							</thead>

							<tbody>
								{% verbatim %}
									<tr ng-repeat="col in vm.data.pengajuan_ks_detail" ng-if="vm.data.pengajuan_ks_detail && vm.data.pengajuan_ks_detail.length != 0">
										<td ng-bind="col.kode || '-'"></td>
										<td ng-bind="col.nama || '-'"></td>
										<td class="text-center" ng-bind="col.sks || '-'"></td>
										<td class="text-center" ng-bind="col.semester.nama || '-'"></td>
										<td>
											<button class="btn btn-danger" ng-click="deleteTableData($index, vm.data.pengajuan_ks_detail)">X</button>
										</td>
									</tr>
									<tr ng-if="!vm.data.pengajuan_ks_detail || vm.data.pengajuan_ks_detail.length == 0">
										<td  class="text-center" colspan="5">Belum ada data</td>
									</tr>
								{% endverbatim %}
							</tbody>

						</table>
	        		</div>
	    		</div>

			</div>

			<div class="modal-footer">
				<button class="btn btn-primary" btn-save-to-ctrl="mahasiswa_id" target="pengajuan_ks" data-bs-dismiss="modal">Submit</button>
				<button class="btn" data-bs-dismiss="modal">Close</button>
			</div>

		</div>
	</div>
</div>