{% verbatim %}
<div class="modal fade" id="{{vm.uid}}">
{% endverbatim %}

	<div class="modal-dialog modal-dialog-scrollable modal-lg">
		<div class="modal-content">

			<div class="modal-header">
				<h5 class="modal-title">Konfigurasi Nilai</h5>
			</div>

			<div class="modal-body ui-front">
				<div class="row">
					<div class="col-md-6">
						<table class="custom-table">
							{% include 'pages/components/preview-text.twig' with {'name': 'kode', 'label': 'Kode', 'prefix': 'vm.additionalData.mata_kuliah'} %}
							{% include 'pages/components/preview-text.twig' with {'name': 'nama', 'label': 'Nama', 'prefix': 'vm.additionalData.mata_kuliah'} %}
						</table>
					</div>

					<div class="col-md-6">
						<table class="custom-table">
							{% include 'pages/components/preview-text.twig' with {'name': 'sks', 'label': 'SKS', 'prefix': 'vm.additionalData.mata_kuliah'} %}
							{% include 'pages/components/preview-text.twig' with {'name': 'semester.nama', 'label': 'Semester', 'prefix': 'vm.additionalData.mata_kuliah'} %}
						</table>
					</div>
				</div>

				<hr>

				{% verbatim %}
				
				<div class="row mt-3">
					<div class="col-md-6" ng-repeat="nilai in vm.data">
						<div class="row form-group px-3">
							<div class="col-sm-4">
								<div class="text-muted font-semibold me-3" ng-bind="nilai.nama"></div>
							</div>
							<div class="col-sm-8">
								<input type="text" ng-model="vm.konfigurasi_nilai[nilai.id]" class="form-control form-control-sm">
							</div>
						</div>
					</div>
				</div>

				{% endverbatim %}
			</div>

			<div class="modal-footer">
				{% verbatim %}
					<button class="btn btn-primary btn-konfigurasi-nilai" active-id="{{vm.additionalData.id}}" data-bs-dismiss="modal">Simpan</button>
					<button class="btn" data-bs-dismiss="modal">Close</button>
				{% endverbatim %}
			</div>

		</div>
	</div>
</div>