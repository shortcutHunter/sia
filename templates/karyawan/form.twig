{% extends 'structure/form.twig' %}


{% block content %}
		
		<div class="row">
			<div class="col-md-6">
				<table class="custom-table">
					{% include 'components/input.twig' with {'name': 'ni', 'label': 'NIDN/NIP'} %}
					{% include 'components/input.twig' with {'name': 'orang.nama', 'label': 'Nama', 'required': true} %}
				</table>
			</div>
			
			<div class="col-md-6">
				<table class="custom-table">
					<tr>
						<td>
							<div class="text-muted font-semibold me-3">Jenis Karyawan</div>
						</td>
						<td>
							<div class="form-check">
						        <div class="checkbox" ng-repeat="role in vm.option.orang.selection.role track by $index">
						            <label>
						            	{% verbatim %}
						            	<input 
							            	type="checkbox"
							            	ng-model="vm.role_ids[role.id]"
							            	class="form-check-input"
							            	ng-true-value="{{role.id}}"
							            	ng-false-value="false">
							            	    {{ role.nama }}
						            	{% endverbatim %}
						            </label>
						        </div>
						    </div>
						</td>
					</tr>
				</table>
			</div>
		</div>

		<ul class="nav nav-tabs mt-5">
			<li class="nav-item">
            	<a class="nav-link active" data-bs-toggle="list" href="#pribadi">Data Pribadi</a>
            </li>
        </ul>

        <div class="tab-content text-justify">
        	<div class="tab-pane fade show active" id="pribadi">
        		<div class="row mt-3">
        			<div class="col-md-6">
	        			<table class="custom-table">
						{% include 'components/input.twig' with {'name': 'orang.nik', 'label': 'NIK', 'required': true} %}
						{% include 'components/input.twig' with {'name': 'orang.tempat_lahir', 'label': 'Tempat Lahir', 'required': true} %}
						{% include 'components/date-picker.twig' with {'name': 'orang.tanggal_lahir', 'label': 'Tanggal Lahir', 'required': true} %}
						{% include 'components/radio.twig' with {'name': 'orang.jenis_kelamin', 'label': 'Jenis Kelamin', 'option': 'orang.option.jenis_kelamin', 'required': true} %}
						{% include 'components/select.twig' with {'name': 'orang.agama_id', 'label': 'Agama', 'option': 'orang.selection.agama', 'label_selection': 'nama'} %}
	        			</table>
	        		</div>

	        		<div class="col-md-6">
	        			<table class="custom-table">
							{% include 'components/textarea.twig' with {'name': 'orang.alamat', 'label': 'Alamat'} %}
							{% include 'components/input.twig' with {'name': 'orang.email', 'label': 'Email', 'required': true} %}
							{% include 'components/input.twig' with {'name': 'orang.no_hp', 'label': 'No. HP', 'required': true} %}
	        			</table>
	        		</div>
        		</div>
        	</div>
        </div>

{% endblock %}